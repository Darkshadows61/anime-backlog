    <body>
        <main>
            <section>
                <h1>Anime Show Backlog</h1>
                <h2>Add a new Anime</h2>
                <form action="addAnime" method="POST">
                    <input type="text" placeholder="Anime" name="showName">
                    <input type="text" placeholder="Service" name="streamService">
                    <button type="submit">Submit</button>
                </form>
            </section>

            <section>
                <ul class="animeAdd">
                    <% for (let i=0; i < animes.length; i++ ) {%>
                        <li class ='anime'>
                            <span><%= animes[i].showName %></span>
                            <span><%= animes[i].streamService %></span>
                            <span><%= animes[i].likes %></span>
                            <span id='anime-finish'><i class="fa-solid fa-flag-checkered"></i></span>
                            <span id="anime-like" class='fa fa-thumbs-up'></span>
                            <span id="anime-trash" class='fa fa-trash'></span>
                        </li>
                    <% } %>
                </ul>
            </section>

            <section>
                <h2>Complete</h2>
                <ul class="animeComplete">
                    <% for (let i=0; i < animeComplete.length; i++ ) {%>
                        <li class ='animeCompleteList'>
                            <span><%= animeComplete[i].showName %></span>
                            <span><%= animeComplete[i].streamService %></span>
                            <span><%= animeComplete[i].likes %></span>
                            <span id='anime-finish-like' class='fa fa-thumbs-up'></span>
                            <span id='anime-trash-finish' class='fa fa-trash'></span>
                        </li>
                    <% } %>
                </ul>
            </section>

       
        <script src="js/main.js"></script>
    </body>
